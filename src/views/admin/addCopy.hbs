<div class="center">
  <div class="w3-container w3-half w3-margin-top">
    <h2 class="w3-text-dark-gray w3-margin-bottom" style="font-weight: bold;">Register Copy of Book</h2>
    <form class="w3-container w3-card w3-round" action="/admin/dashboard/addCopy" method="POST">
      <div class="w3-section">
        <label for="ISBN">ISBN</label>
        <input class="w3-input w3-border" type="text" value="{{ISBN}}" id="ISBN" name="ISBN" required autofocus>
      </div>
      <div class="w3-section">
        <label for="state">State</label>
        <select class="w3-select w3-border" id="state" name="state" required>
          <option value="" disabled selected>Select State</option>
          <option value="New">New</option>
          <option value="Like New">Like New</option>
          <option value="Very Good">Very Good</option>
          <option value="Good">Good</option>
          <option value="Fair">Fair</option>
          <option value="Poor">Poor</option>
          <!-- Add more genre options as needed -->
        </select>
      </div>
      <div class="w3-section">
        <label for="cost">Cost</label>
        <input class="w3-input w3-border" type="number" id="cost" name="cost" required>
      </div>
      <div class="w3-section">
        <label for="date_entry">Entry Date</label>
        <input class="w3-input w3-border" type="date" id="date_entry" name="date_entry" required>
      </div>
      <div class="w3-section">
        <button class="w3-button fb-palette-primary w3-round w3-block" type="submit">Register</button>
      </div>
    </form>
  </div>
</div>
