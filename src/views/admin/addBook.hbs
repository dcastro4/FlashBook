<div class="center">
  <div class="w3-container w3-half w3-margin-top">
    <h2 class="w3-text-dark-gray w3-margin-bottom" style="font-weight: bold;">Register Book</h2>
    <form class="w3-container w3-card w3-round" action="/admin/dashboard/addBook" method="POST" enctype="multipart/form-data">
      <div class="w3-section">
        <label for="title">Title</label>
        <input class="w3-input w3-border" type="text" id="title" name="title" required>
      </div>
      <div class="w3-section">
        <label for="ISBN">ISBN</label>
        <input class="w3-input w3-border" type="text" id="ISBN" name="ISBN" required>
      </div>
      <div class="w3-section">
        <label for="author">Author</label>
        <input class="w3-input w3-border" type="text" id="author" name="author">
      </div>
      <div class="w3-section">
        <label for="genre">Genre</label>
        <select class="w3-select w3-border" id="genre" name="genre" required>
          <option value="" disabled selected>Select Genre</option>
          <option value="Fantasy">Fantasy</option>
          <option value="SciFi">Sci-Fi</option>
          <option value="Romance">Romance</option>
          <option value="Mistery">Mistery</option>
          <option value="Adventure">Adventure</option>
          <option value="Poetry">Poetry</option>
          <option value="Horror">Horror</option>
          <option value="Science">Science</option>
          <!-- Add more genre options as needed -->
        </select>
      </div>
      <div class="w3-section">
        <label for="pages">Pages</label>
        <input class="w3-input w3-border" type="number" id="pages" name="pages" required>
      </div>
      <div class="w3-section">
        <label for="publisher">Publisher</label>
        <input class="w3-input w3-border" type="text" id="publisher" name="publisher">
      </div>
      <div class="w3-section">
        <label for="language">Language</label>
        <select class="w3-select w3-border" id="language" name="language" required>
          <option value="" disabled selected>Select Language</option>
          <option value="English">English</option>
          <option value="Spanish">Spanish</option>
          <option value="French">French</option>
          <option value="German">German</option>
          <!-- Add more language options as needed -->
        </select>
      </div>
      <div class="w3-section">
        <label for="publication_date">Publication Date</label>
        <input class="w3-input w3-border" type="date" id="publication_date" name="publication_date">
      </div>
      <div class="w3-section">
        <label for="image">Image</label>
        <input class="w3-input w3-border" type="file" id="image" name="image" accept="image/*">
      </div>
      <div class="w3-section">
        <button class="w3-button fb-palette-primary w3-round w3-block" type="submit">Register</button>
      </div>
    </form>
  </div>
</div>
