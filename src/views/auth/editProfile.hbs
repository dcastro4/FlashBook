<div class="center">
  <div class="w3-container w3-half w3-margin-top">
    <h2 class="w3-text-dark-gray w3-margin-bottom" style="font-weight: bold;">SignUp</h2>
    <form class="w3-container w3-card w3-round" action="/profile/edit" method="POST">
      <div class="w3-row-padding">
        <div class="w3-half w3-section">
          <label for="{{userType}}">Username</label>
          <input class="w3-input w3-border" type="text" value="{{user.user}}{{user.admin}}" id="{{userType}}" name="{{userType}}" required autofocus>
        </div>
        <div class="w3-half w3-section">
          <label for="password">Password</label>
          <input class="w3-input w3-border" type="password" value="*******" id="password" name="password" disabled>
        </div>
      </div>
      <div class="w3-row-padding">
        <div class="w3-half w3-section">
          <label for="dni">DNI</label>
          <input class="w3-input w3-border" type="text" value="{{user.DNI}}" id="dni" name="dni" required>
        </div>
        <div class="w3-half w3-section">
          <label for="first_name">First Name</label>
          <input class="w3-input w3-border" type="text" value="{{user.first_name}}" id="first_name" name="first_name" required>
        </div>
      </div>
      <div class="w3-row-padding">
        <div class="w3-half w3-section">
          <label for="last_name">Last Name</label>
          <input class="w3-input w3-border" type="text" value="{{user.last_name}}" id="last_name" name="last_name" required>
        </div>
        <div class="w3-half w3-section">
          <label for="date_birth">Date of Birth</label>
          <input class="w3-input w3-border" type="date" value="{{user.date_birth}}" id="date_birth" name="date_birth" required>
        </div>
      </div>
      <div class="w3-row-padding">
        <div class="w3-half w3-section">
          <label for="place_birth">Place of Birth</label>
          <input class="w3-input w3-border" type="text" value="{{user.place_birth}}" id="place_birth" name="place_birth" required>
        </div>
        <div class="w3-half w3-section">
          <label for="gender">Gender</label>
          <select class="w3-select w3-border" id="gender" name="gender" required>
            <option value="" disabled>Select your gender</option>
            <option value="male" {{#if (eq user.gender 'male')}}selected{{/if}}>Male</option>
            <option value="female" {{#if (eq user.gender 'female')}}selected{{/if}}>Female</option>
            <option value="other" {{#if (eq user.gender 'other')}}selected{{/if}}>Other</option>
          </select>
        </div>
      </div>
      {{#if (eq userType 'user')}}
      <div class="w3-section">
        <label for="favorite">Preference Category</label>
        <select class="w3-select w3-border" id="favorite" name="favorite" required>
          <option value="" disabled>Select a Category</option>
          <option value="horror" {{#if (eq user.favorite 'horror')}}selected{{/if}}>Horror</option>
          <option value="scifi" {{#if (eq user.favorite 'scifi')}}selected{{/if}}>SciFi</option>
          <option value="romance" {{#if (eq user.favorite 'romance')}}selected{{/if}}>Romance</option>
          <option value="poetry" {{#if (eq user.favorite 'poetry')}}selected{{/if}}>Poetry</option>
          <option value="adventure" {{#if (eq user.favorite 'adventure')}}selected{{/if}}>Adventure</option>
          <option value="fantasy" {{#if (eq user.favorite 'fantasy')}}selected{{/if}}>Fantasy</option>
          <option value="comedy" {{#if (eq user.favorite 'comedy')}}selected{{/if}}>Comedy</option>
        </select>
      </div>
      {{/if}}
      <div class="w3-section">
        <label for="email">Email</label>
        <input class="w3-input w3-border" type="email" value="{{user.email}}" id="email" name="email" required>
      </div>
      <div class="w3-section">
        <label for="address">Address</label>
        <input class="w3-input w3-border" type="text" value="{{user.address}}" id="address" name="address" required>
      </div>
      <div class="w3-section">
        <button class="w3-button fb-palette-primary w3-round w3-block" type="submit">Register</button>
      </div>
    </form>
  </div>
</div>